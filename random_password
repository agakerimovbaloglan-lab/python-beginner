import string
import random

def generate_password(length):
    # BÃ¶yÃ¼k hÉ™rflÉ™r + kiÃ§ik hÉ™rflÉ™r + rÉ™qÉ™mlÉ™r
    all_chars = string.ascii_letters + string.digits
    
    # Random parol yarat
    password = ''.join(random.choice(all_chars) for _ in range(length))
    return password

def main():
    print("ğŸ” Parol Generatoruna xoÅŸ gÉ™lmisiniz! ğŸ”")
    
    while True:
        try:
            length = int(input("Parolun uzunluÄŸunu daxil edin (mÉ™sÉ™lÉ™n 8): "))
            if length <= 0:
                print("Uzunluq 0-dan bÃ¶yÃ¼k olmalÄ±dÄ±r! YenidÉ™n cÉ™hd edin.")
                continue
            break
        except ValueError:
            print("ZÉ™hmÉ™t olmasa bir tam É™dÉ™d daxil edin!")
    
    password = generate_password(length)
    print(f"Sizin tÉ™sadÃ¼fi parolunuz: {password}")

if __name__ == "__main__":
    main()
